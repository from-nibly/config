{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "watch": false,
    "skipLibCheck": true,
    "removeComments": false,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noLib": false,
    "declaration": true,
    "outDir": "dist"
  },
  "exclude": ["node_modules", "dist"],
  "typeRoots": ["./node_modules/@types"]
}
